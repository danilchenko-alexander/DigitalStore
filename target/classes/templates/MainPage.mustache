<html>
<head>
    <meta charset="UTF-8">
    <title>Title</title>

</head>
<body>
    <div>
        <form action="/logout" method="post">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}">
            <input type="submit" value="Sign Out"/>
        </form>
    </div>
    <div>
        <form method="post">
            <input type="text" name="msg" placeholder="message">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}">
            <button type="submit">Добавить</button>
        </form>
    </div>
    <div>Список имен</div>
    {{#messages}}
    <div>
        <b>{{id}}</b>
        <span>{{msg}}</span>
    </div>
    {{/messages}}
</body>
</html>